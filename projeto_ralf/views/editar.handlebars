<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <title>Editar Produto</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <!-- Font Awesome para ícones -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" integrity="sha512-A8h2Mr0hr2s6v1c2Oa+0cF3uQJ0AwAkuHnx0Kn2cQy10Op3je13n5g0QAKG3s2g+0vJLfR3lQ1gCk2gG+IAXOBQ==" crossorigin="anonymous">
  <style>
    body {
      background-color: #f1f3f6;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    .form-control {
      border-radius: 0.375rem;
    }
    /* Fallback para garantir que os campos fiquem na mesma linha */
    .d-flex {
      display: flex !important;
    }
    .gap-3 {
      gap: 1rem !important;
    }
    .flex-fill {
      flex: 1 !important;
    }
  </style>
</head>
<body>
<div class="container mt-5">
  <h2><i class="fas fa-edit me-2"></i>Editar Produto</h2>

  <form action="/produtos/editar/{{produto._id}}" method="POST" enctype="multipart/form-data" class="p-3 bg-white rounded shadow-sm">
    <div class="row g-3 align-items-end">
      <!-- Nome e Preço na mesma linha -->
      <div class="col-md-8 d-flex gap-3">
        <div class="flex-fill">
          <label for="nome" class="form-label">Nome do Produto</label>
          <input type="text" name="nome" id="nome" class="form-control" value="{{produto.nome}}" required>
        </div>
        <div class="flex-fill">
          <label for="preco" class="form-label">Preço (em centavos)</label>
          <input type="number" name="preco" id="preco" class="form-control" value="{{produto.preco}}" required>
        </div>
      </div>
      <!-- Imagem -->
      <div class="col-md-4">
        <label for="imagem" class="form-label">Imagem do Produto (deixe vazio para manter a mesma)</label>
        <input type="file" name="imagem" id="imagem" class="form-control">
      </div>
    </div>

    <!-- Mostrar imagem atual -->
    {{#if produto.imagem}}
      <div class="mt-3">
        <img src="{{produto.imagem}}" alt="Imagem Atual" style="max-width: 150px; max-height: 150px; object-fit: cover;">
      </div>
    {{/if}}

    <!-- Botões -->
    <div class="mt-3 d-flex gap-2">
      <button type="submit" class="btn btn-success"><i class="fas fa-save me-2"></i>Salvar Alterações</button>
      <a href="/" class="btn btn-secondary"><i class="fas fa-arrow-left me-2"></i>Voltar</a>
    </div>
  </form>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>